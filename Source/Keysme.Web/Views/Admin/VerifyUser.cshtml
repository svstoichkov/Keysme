@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Verify users";
    ViewBag.TablesFix = " ";
}
@using Keysme.Global
@using Keysme.Services.Data
@using Microsoft.AspNet.Identity
@model Keysme.Web.ViewModels.Admin.VerifyUserViewModel
<div class="row">
    @Html.Partial("SideBarPartial")
    <div class="col-md-9">
        <div class="panel panel-green">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-tasks"></i> Verify users
                </h3>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Date of birth</th>
                        <th>Review</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in this.Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.BirthDate.ToString(@"MM-dd-yyyy")</td>
                            <td>
                                <button class="btn-u" data-toggle="modal" data-target="#@user.Id">View</button>
                                <div class="modal fade" id="@user.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>@user.FirstName @user.LastName @user.BirthDate.ToString(@"MM-dd-yyyy") @user.Gender</p>
                                                <p>@user.Location</p>
                                                <p>@user.Verification.Type.GetDisplayName()</p>
                                                <p>@user.Verification.CountryCode.GetDisplayName()</p>

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <a href="/@Path.Combine(GlobalConstants.UserVerificationImageFolder, user.Id + "_front.jpg")" target="_blank">
                                                            <img class="img-responsive img-bordered rounded-2x profile-img margin-bottom-20" src="/@Path.Combine(GlobalConstants.UserVerificationImageFolder, user.Id + "_front.jpg")">
                                                        </a>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a href="/@Path.Combine(GlobalConstants.UserVerificationImageFolder, user.Id + "_back.jpg")" target="_blank">
                                                            <img class="img-responsive img-bordered rounded-2x profile-img margin-bottom-20" src="/@Path.Combine(GlobalConstants.UserVerificationImageFolder, user.Id + "_back.jpg")">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                @using (Html.BeginForm("VerifyUser", "Admin", new { userId = user.Id }, FormMethod.Post))
                                                {
                                                    <button data-dismiss="modal" class="btn-u btn-u-default" type="button">Close</button>
                                                    <button class="btn-u" type="submit">Verify</button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Css{
    <link rel="stylesheet" href="/assets/plugins/sky-forms-pro/skyforms/css/sky-forms.css">
    <link rel="stylesheet" href="/assets/plugins/sky-forms-pro/skyforms/custom/custom-sky-forms.css">
    <!--[if lt IE 9]><link rel="stylesheet" href="/assets/plugins/sky-forms-pro/skyforms/css/sky-forms-ie8.css"><![endif]-->
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
