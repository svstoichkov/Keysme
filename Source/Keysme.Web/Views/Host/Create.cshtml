@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Keysme.Web.ViewModels.Host.HostViewModel

<div class="row">
    <!-- Begin Sidebar Menu -->
    @Html.Partial("SideBarPartial")
    <div class="col-md-9">
        <!-- Checkout-Form -->
        <form action="#" id="sky-form" class="sky-form" novalidate="novalidate">
            <header>Main information</header>

            <fieldset>
                <section>
                    <label for="file" class="input">
                        <input type="text" id="file" placeholder="Host name">
                    </label>
                </section>
                <section>
                    <label for="file" class="input">
                        <input type="text" id="file" placeholder="Header">
                    </label>
                </section>

                <section>
                    <label class="textarea">
                        <textarea rows="3" name="info" placeholder="Description"></textarea>
                    </label>
                </section>
            </fieldset>

            <fieldset>
                <section>
                    @Html.EnumDropDownListFor(m => m.Type, "Host type", new { @class = "form-control" })
                </section>
                <section>
                    @Html.EnumDropDownListFor(m => m.RoomType, "Room type", new { @class = "form-control" })
                </section>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-md-3">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Max guests">
                        </label>
                    </section>
                    <section class="col col-md-3">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Rooms count">
                        </label>
                    </section>
                    <section class="col col-md-3">
                        <label class="input">
                            <input type="text" name="cvv" id="cvv" placeholder="Beds count">
                        </label>
                    </section>
                    <section class="col col-md-3">
                        <label class="input">
                            <input type="text" name="cvv" id="cvv" placeholder="Baths count">
                        </label>
                    </section>
                </div>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-md-7">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Price">
                        </label>
                    </section>
                    <section class="col col-md-5">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Currency">
                        </label>
                    </section>
                </div>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-5">
                        <label class="toggle"><input type="checkbox" name="checkbox-toggle" checked=""><i class="no-rounded"></i>Can be instantly booked</label>
                    </section>
                </div>
                <section>
                    @Html.EnumDropDownListFor(m => m.CancellationPolicy, "Cancellation policy", new { @class = "form-control" })
                </section>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-md-6">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Check in after">
                        </label>
                    </section>
                    <section class="col col-md-6">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Check out before">
                        </label>
                    </section>
                </div>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-md-6">
                        <label class="label">WiFi name</label>
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="WiFi name">
                        </label>
                    </section>
                    <section class="col col-md-6">
                        <label class="label">WiFi password</label>
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="WiFi password">
                        </label>
                    </section>
                </div>
            </fieldset>

            <fieldset>
                <section>
                    <label class="label">House manual</label>
                    <label class="textarea">
                        <i class="icon-append fa fa-comment"></i>
                        <textarea rows="3" placeholder="Placeholder text"></textarea>
                    </label>
                </section>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-md-6">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Main phone">
                        </label>
                    </section>
                    <section class="col col-md-6">
                        <label class="input">
                            <input type="text" name="card" id="card" placeholder="Reservation phone">
                        </label>
                    </section>
                </div>
            </fieldset>

            <fieldset>
                <div class="row">
                    <section class="col col-5">
                        <label class="toggle"><input type="checkbox" name="checkbox-toggle" checked=""><i class="no-rounded"></i>Smoking is allowed</label>
                    </section>
                </div>
            </fieldset>

            <footer>
                <button type="submit" class="btn-u">Continue</button>
            </footer>
        </form>
    </div>
    <!-- End Content -->
</div>

@section Css{
    <link rel="stylesheet" href="/assets/plugins/sky-forms-pro/skyforms/css/sky-forms.css">
    <link rel="stylesheet" href="/assets/plugins/sky-forms-pro/skyforms/custom/custom-sky-forms.css">
    <!--[if lt IE 9]><link rel="stylesheet" href="/assets/plugins/sky-forms-pro/skyforms/css/sky-forms-ie8.css"><![endif]-->
}